    "@testing-library/react": "^16.3.1",
    "@types/node": "^25.0.2",
    "@types/react": "^19.2.7",
    "@types/turndown": "^5.0.6",
    "@typescript-eslint/eslint-plugin": "^8.50.0",
    "@typescript-eslint/parser": "^8.50.0",
    "@typescript/native-preview": "7.0.0-dev.20251215.1",
    "eslint": "^9.39.2",
    "happy-dom": "^20.0.11",
    "npm-run-all2": "^8.0.4",
    "prettier": "^3.7.4",
    "prettier-plugin-packagejson": "^2.5.20",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "tsdown": "^0.18.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.15"
